<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Cut" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_16sdp</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/appcolorbasic</item>
        <item name="hintTextColor">@color/appcolorbasic</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
    </style>

    <style name="DropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="endIconTint">@color/black</item>
        <item name="boxStrokeColor">@color/appcolorbasic</item>
        <item name="hintTextColor">@color/appcolorbasic</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
    </style>
</resources>